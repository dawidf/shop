<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Dumplie{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/css/bootstrap.css">
            <link rel="stylesheet" href="{{ asset('assets/css/inventory/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    </head>
    <body>
    <header>
    {% block navigation %}
        <nav class="navbar navbar-fixed-top navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ url('dumplie_inventory_dashboard') }}">{{ 'inventory.menu.inventory'|trans }}</a>
            <ul class="nav navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ url('dumplie_inventory_storage') }}">{{ 'inventory.menu.storage'|trans }}</a>
                </li>
            </ul>
        </nav>
    {% endblock %}
    </header>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.3/js/tether.min.js"></script>
        <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
        <script src="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
