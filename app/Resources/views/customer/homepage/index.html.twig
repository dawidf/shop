{% extends ':customer:base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1>Inventory</h1>
    </div>
</div>
<div class="row">
    {% for product in inventory %}
        <div class="col-lg-4">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">{{ product.metadata.name }} {{ product.price|number_format(2, '.', ',') }} {{ product.currency }}</h4>
                    <p class="card-text"></p>
                    <a href="{{ url('dumplie_customer_product_details', {sku: product.sku}) }}" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
